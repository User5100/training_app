  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "TS File",
      "args": ["${relativeFile}"],
      "runtimeArgs": [
        "-r",
        "tsconfig-paths/register",
        "-r",
        "ts-node/register"
      ],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "protocol": "inspector"
      /*
      "internalConsoleOptions": "openOnSessionStart",
      "env": {
        "TS_NODE_PROJECT": "tsconfig.json"
      },
      "stopOnEntry": false
      */
    },
    {
      "type": "node",
      "request": "attach",
      "sourceMaps": true,
      "name": "Attach",
      "port": 3100
    }
  ]
}
